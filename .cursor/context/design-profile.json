{
  "designSystem": {
    "theme": "light-first",
    "brand": { "name": "Clinoo", "primaryHex": "#2563EB" },
    "colors": {
      "primary": "#2563EB",
      "surface": { "0": "#FFFFFF", "50": "#FAFAFA", "100": "#F5F5F5" },
      "text": { "primary": "#111827", "secondary": "#4B5563", "muted": "#6B7280", "inverse": "#FFFFFF" },
      "border": { "subtle": "#E5E7EB", "strong": "#D1D5DB" }
    },
    "radii": { "xl": 16, "2xl": 20 },
    "shadows": { "sheet": "sheet", "card": "card", "press": "press" },
    "components": {
      "button": {
        "variants": {
          "primary": "bg-primary text-text-inverse shadow-press",
          "subtle": "bg-surface-100 text-text-primary border border-border-strong",
          "ghost": "bg-transparent text-text-primary"
        },
        "sizes": { "md": "h-11 px-4", "lg": "h-14 px-5" },
        "radius": "rounded-2xl"
      },
      "pill": {
        "active": "bg-primary/10 border border-primary/30 text-text-primary",
        "inactive": "bg-surface-0 border border-border-subtle text-text-secondary",
        "base": "px-4 py-2 rounded-2xl"
      },
      "sheet": { "container": "bg-surface-0 px-4 pt-4 pb-6 rounded-t-2xl shadow-sheet border-t border-border-subtle" },
      "card": { "container": "bg-surface-0 border border-border-subtle rounded-2xl px-4 py-3 shadow-card" }
    },
    "testing": {
      "primaryCtas": ["service-basic","use-current-location","confirm-price","choose-provider-1","mark-complete"]
    }
  }
}